    <!-- CONTENT -->
   <div class="container ">
    <hr>
    <h2>Usuários</h2>
    <a href="/users/new" class="btn btn-ls btn-success pull-right"><i class="fa fa-plus"></i> Adicionar usuário</a>
    <hr>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th> </th>
            </tr>
        </thead>
      <tbody>
        <% if(msg){%> 
          <%=msg%> 
          <%} %> 
      
          <% user.forEach(user => {%> 
            <tr>
            <td><%=user.id%> </td>
            <td><%=user.email%> </td>
            <td>
                <form method="POST" action="/users/delete" style="display: inline;" id="submit" onsubmit="confirmarDelecao(event, this)">
                <input type="hidden" name="id" value="<%=user.id%>" >
        <% if(user.id == sessionId ){%>
        <button class="btn btn-success " disabled><i class="fa fa-trash"></i></button>
        <span class="badge bg-success"> On</span>
        <span class="badge bg-success"> <%=roles%> </span>
         <% }else{ %> 
          
         <button class="btn btn-danger "><i class="fa fa-trash"></i></button>
        <% } %>          
                    
                    <!-- <i  type="button" class="material-icons delete" data-bs-toggle="modal" data-bs-target="#mymodal" id="btnForm" style="color:red" title="apagar">
                        &#xE872;
                    </i> -->
                   </form>
            </td>
           <%});%>  
       </tr>
      </tbody>
    </table>
    </div>


